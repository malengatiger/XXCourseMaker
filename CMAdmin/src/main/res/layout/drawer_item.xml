<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:padding="20dp" >
    <ImageView
        android:id="@+id/DRW_ITEM_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/activity_48" />
    <TextView
        android:id="@+id/DRW_ITEM_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/DRW_ITEM_count"
        android:layout_alignBottom="@+id/DRW_ITEM_count"
        android:layout_toRightOf="@+id/DRW_ITEM_image"
        android:gravity="center"
        android:text="Drawer Item Name"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/DRW_ITEM_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/DRW_ITEM_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/xgrey_box"
        android:text="33"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>