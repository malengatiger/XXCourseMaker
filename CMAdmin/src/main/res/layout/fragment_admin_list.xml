<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/CLS_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xwhite_rounded_corners"
        android:gravity="center"
        android:padding="5dp" >

        <TextView
            android:id="@+id/CLS_label"
            style="@style/Title3TextStyleGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/admin_list" />

        <TextView
            android:id="@+id/CLS_count"
            style="@style/BlueCountBoxSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" android:gravity="center"
            android:background="@drawable/xblue_box"
            android:text="@string/zero" />
    </RelativeLayout>

    <ListView
        android:id="@+id/CLS_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/CLS_top" />

</RelativeLayout>