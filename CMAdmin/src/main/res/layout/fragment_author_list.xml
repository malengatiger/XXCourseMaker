<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/CLS_layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xwhite_rounded_corners"
        android:gravity="center"
        android:padding="5dp" >

        <TextView
            android:id="@+id/CLS_label"
            style="@style/Title3TextStyleGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/author_list" />

        <TextView
            android:id="@+id/CLS_count"
            style="@style/GreenCountBoxSmall"
            android:layout_width="wrap_content" android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="0" />
    </RelativeLayout>

    <ListView
        android:id="@+id/CLS_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/CLS_layoutTop" />

</RelativeLayout>