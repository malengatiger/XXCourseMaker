<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

    <RelativeLayout
            android:id="@+id/INV_layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <ImageView
                android:id="@+id/INV_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/make_model"
                android:src="@drawable/clipboard32"/>

        <TextView
                android:id="@+id/INV_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/INV_image"
                android:padding="5dp"
                android:text="@string/make_model"
                style="@style/Title3TextStyleBlack"/>
    </RelativeLayout>


    <RelativeLayout
            android:layout_below="@id/INV_layout0"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/INV_serialLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/serial_number"
                android:textColor="@color/grey"
                android:textSize="10sp"/>

        <TextView
                android:id="@+id/INV_serial"
                style="@style/TextStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/INV_serialLabel"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/INV_serialLabel"
                android:text="1234567d43e"/>

        <TextView
                android:id="@+id/INV_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2014"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:textStyle="bold"/>

    </RelativeLayout>


</RelativeLayout>