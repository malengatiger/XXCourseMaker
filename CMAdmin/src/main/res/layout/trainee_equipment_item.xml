<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/TR_ITEM_layout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/xwhite_rounded_corners"
                android:padding="10dp">

    <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/TR_ITEM_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/boy"/>

    <TextView
            android:id="@+id/TR_ITEM_txtName"
            style="@style/Title3TextStyleBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/TR_ITEM_image"
            android:layout_toRightOf="@+id/TR_ITEM_image"
            android:text="Trainee name"
            />

    <RelativeLayout
            android:id="@+id/TR_ITEM_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TR_ITEM_txtName"
            android:layout_below="@+id/TR_ITEM_txtName"
            android:visibility="visible">

        <TextView
                android:id="@+id/TR_ITEM_txtDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextStyleBlue"
                android:layout_alignParentTop="true"
                android:text="Device Model"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/TR_ITEM_layout1aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TR_ITEM_layout1"
            android:layout_below="@+id/TR_ITEM_layout1"
            android:visibility="visible">

        <TextView
                android:id="@+id/TR_ITEM_txtSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Serial Number" android:textSize="12sp"
                style="@style/TextStyle"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/TR_ITEM_layout1a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="5dp"
            android:layout_alignLeft="@+id/TR_ITEM_layout1aa" android:visibility="gone"
            android:layout_below="@+id/TR_ITEM_layout1aa">

        <TextView
                android:id="@+id/TR_ITEM_txtClassname"
                style="@style/TextStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentTop="true"
                android:text="Class name here"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/TR_ITEM_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="5dp"
            android:layout_alignLeft="@+id/TR_ITEM_layout1a"
            android:layout_below="@+id/TR_ITEM_layout1a"
            android:background="@color/blue_pale">

        <TextView
                android:id="@+id/TR_ITEM_txtStartLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/date_issued"
                android:textColor="@color/grey2"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/TR_ITEM_txtStartDate"
                style="@style/TextStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/TR_ITEM_txtStartLabel"
                android:text="30/12/2015"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/TR_ITEM_layout2a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:padding="5dp"
            android:layout_alignLeft="@+id/TR_ITEM_layout2"
            android:layout_below="@+id/TR_ITEM_layout2">

        <TextView
                android:id="@+id/TR_ITEM_endLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/date_returned"
                android:textColor="@color/grey2"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/TR_ITEM_txtEndDate"
                style="@style/TextStyleSmall"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/TR_ITEM_endLabel"
                android:text="30/12/2015"/>
    </RelativeLayout>

</RelativeLayout>