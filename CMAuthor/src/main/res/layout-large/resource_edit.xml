<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CRS_layoutTop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:padding="5dp" >

    <RelativeLayout
        android:id="@+id/CRS_layoutTop2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xwhite_rounded_corners"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/CRS_layoutCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/CRS_courseLabel"
                style="@style/Title2TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/course" />

            <TextView
                android:id="@+id/CRS_course"
                style="@style/Title2TextStyleBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Course Name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/CRS_layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CRS_layoutCourse"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/CRS_lessonLabel"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/lesson" />

            <TextView
                android:id="@+id/CRS_lesson"
                style="@style/Title2TextStyleBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Task/Lesson Name here ..." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/CRS_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CRS_layout0"
            android:background="@drawable/white_rounded_corners"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:id="@+id/CRS_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="20dp"
                android:text="@string/add_resource"
                android:textColor="@color/translucent_red"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/CRS_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_lesson_resource"
                android:imeOptions="actionDone"
                android:inputType="textUri"
                android:padding="20dp" />

            <EditText
                android:id="@+id/CRS_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_objective_desc"
                android:inputType="textCapWords"
                android:padding="20dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <Button
                    android:id="@+id/CRS_btnCancel"
                    style="@style/ButtonCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="5dp"
                    android:text="@string/cancel" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/CRS_btnSearch"
                    style="@style/ButtonRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/find_resource_links" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <Button
                    android:id="@+id/CRS_btnSave"
                    style="@style/ButtonNavyBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/save" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>