<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xwhite_rounded_corners"
    android:padding="5dp" >

    <TextView
            android:id="@+id/CRSITEM_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@color/white" android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:background="@drawable/xblue_oval" />


    <TextView
        android:id="@+id/CRSITEM_name"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CRSITEM_image"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/CRSITEM_image"
        android:text="resource title Here but what if the tiyle is very very long and takes itds time telling you something"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CRSITEM_url"
        style="@style/TextStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CRSITEM_name"
        android:layout_toRightOf="@+id/CRSITEM_image"
        android:text="http://amazon.com.aws/self/help/understanding/really/happens/sometimes/when/"
        android:textColor="@color/blue" />

</RelativeLayout>