<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/xwhite_rounded_corners"
        android:padding="5dp" >

        <TextView
            android:id="@+id/CRSITEM_priority"
            style="@style/GreyCountBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/xgrey_box"
            android:text="0" />

        <TextView
            android:id="@+id/CRSITEM_name"
            style="@style/Title2TextStyleBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/CRSITEM_priority"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/CRSITEM_priority"
            android:padding="10dp"
            android:text="Objective Name Here" />

        <TextView
            android:id="@+id/CRSITEM_desc"
            style="@style/TextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/CRSITEM_name"
            android:layout_below="@+id/CRSITEM_name"
            android:padding="5dp"
            android:text="A description of the item sits here undistirbed with some proper constiturted link  here and there" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/CRSITEM_desc"
            android:gravity="right|center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/CRSITEM_btnDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/blue_pale"
                android:padding="5dp"
                android:src="@drawable/arrow_blue_down_64" />

            <ImageView
                android:id="@+id/CRSITEM_btnUo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/CRSITEM_btnDown"
                android:background="@color/blue_pale"
                android:padding="5dp"
                android:src="@drawable/arrow_blue_up_64" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>