<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp" >

    <TextView
        android:id="@+id/CRSITEM_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:textColor="@color/grey"
        android:textSize="20sp" android:text="@string/zero_zero"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/CRSITEM_name"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CRSITEM_image"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/CRSITEM_image"
        android:text="resource title Here but what if the tiyle is very very long and takes itds time telling you something"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/CRSITEM_url"
        style="@style/TextStyleSmall" android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CRSITEM_name"
        android:layout_toRightOf="@+id/CRSITEM_image"
        android:text="http://amazon.com.aws/self/help/understanding/really/happens/sometimes/when/"
        android:textColor="@color/blue" />

</RelativeLayout>