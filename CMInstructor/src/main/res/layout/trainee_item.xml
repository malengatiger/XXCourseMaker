<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TR_ITEM_layout0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/TR_ITEM_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/boy" />
    <TextView
            android:id="@+id/TR_ITEM_txtNumber"
            style="@style/Title2TextStyleGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TR_ITEM_image"
            android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
            android:text="0" />
    <TextView
        android:id="@+id/TR_ITEM_txtName"
        style="@style/TextStyleBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TR_ITEM_image"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/TR_ITEM_image"
        android:text="Trainee name" />

    <RelativeLayout
        android:id="@+id/TR_ITEM_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TR_ITEM_txtName"
        android:layout_below="@+id/TR_ITEM_txtName"
        android:background="@color/blue_pale" >

        <TextView
            android:id="@+id/TR_ITEM_txtTotalTasksLabel"
            style="@style/TextStyleGreySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="@string/tasks_sched" />

        <TextView
            android:id="@+id/TR_ITEM_txtTotalTasks"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:text="0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/TR_ITEM_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TR_ITEM_layout1"
        android:layout_below="@+id/TR_ITEM_layout1"
        android:background="@color/blue_pale" >

        <TextView
            android:id="@+id/TR_ITEM_txtTotalCompleteLabel"
            style="@style/TextStyleGreySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="@string/completed" />

        <TextView
            android:id="@+id/TR_ITEM_txtTotalComplete"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:text="0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/TR_ITEM_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TR_ITEM_layout2"
        android:layout_below="@+id/TR_ITEM_layout2"
        android:background="@color/beige_pale" >

        <TextView
            android:id="@+id/TR_ITEM_txtPercLabel"
            style="@style/TextStyleGreySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="@string/perc_complete" />

        <TextView
            android:id="@+id/TR_ITEM_txtPerc"
            style="@style/TextStyleGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:text="0"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/TR_ITEM_layout3a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TR_ITEM_layout3"
        android:layout_below="@+id/TR_ITEM_layout3" >

        <TextView
            android:id="@+id/TR_ITEM_txtInsRatingLabel"
            style="@style/TextStyleGreySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="@string/instructor_rating" />

        <TextView
            android:id="@+id/TR_ITEM_txtInsAvgRating"
            style="@style/TextStyleRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:text="0"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/TR_ITEM_layout3b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TR_ITEM_layout3a"
        android:layout_below="@+id/TR_ITEM_layout3a" >

        <TextView
            android:id="@+id/TR_ITEM_txtTraineeRatingLabel"
            style="@style/TextStyleGreySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="@string/trainee_rating" />

        <TextView
            android:id="@+id/TR_ITEM_txtTraineeAvgRating"
            style="@style/TextStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:text="0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/TR_ITEM_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TR_ITEM_image"
        android:layout_below="@+id/TR_ITEM_layout3b"
        android:layout_marginTop="10dp"
        android:background="@color/blue_pale" >

        <TextView
            android:id="@+id/TR_ITEM_txtDateLabel"
            style="@style/TextStyleGreySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="@string/date_last" />

        <TextView
            android:id="@+id/TR_ITEM_txtDate"
            style="@style/TextStyleBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TR_ITEM_txtDateLabel"
            android:layout_alignBottom="@+id/TR_ITEM_txtDateLabel"
            android:layout_alignParentRight="true"
            android:text="Monday, 31 December 2014"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>