<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/STRIP_HDR_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/STRIP_HDR_space"
android:background="@color/white"
android:orientation="horizontal"
android:padding="5dp" >

<TextView
        android:id="@+id/STRIP_HDR_label"
        style="@style/TextStyleGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" android:visibility="gone"
        android:text="@string/activity_list" />

<TextView
        android:id="@+id/STRIP_HDR_count"
        style="@style/RedCountBoxSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:text="00"
        android:textSize="12sp" />
</RelativeLayout>