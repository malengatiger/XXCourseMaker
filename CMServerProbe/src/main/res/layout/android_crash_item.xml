<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="5dp"
                android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/AE_image"
            android:src="@drawable/error32"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    <TextView
            android:id="@+id/AE_number"
            android:text="00"
            style="@style/Title2TextStyleGrey"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_below="@id/AE_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <RelativeLayout
            android:id="@+id/AE_nameLayout"
            android:padding="10dp"
            android:layout_toRightOf="@id/AE_image"
            android:layout_alignTop="@id/AE_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/AE_group"
                android:text="Company Name"
                style="@style/Title2TextStyleBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/AE_errorDate"
                android:layout_below="@id/AE_group"
                android:text="Saturday, 23 Decemeber 2091 11:23"
                android:layout_marginLeft="10dp"
                style="@style/TextStyle" android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/AE_brandLayout"
            android:layout_below="@id/AE_nameLayout"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue_pale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/AE_brand"
                android:text="Brand Name"
                style="@style/Title3TextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/AE_phone"
                android:layout_alignParentRight="true"
                android:text="GT-9500"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                style="@style/TextStyle" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/AE_appLayout"
            android:layout_below="@id/AE_brandLayout"
            android:padding="5dp"
            android:background="@color/beige_pale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/AE_appVersion"
                android:text="App Version"
                style="@style/Title3TextStyleBlack"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/AE_package"
                android:layout_alignParentRight="true"
                android:text="com.boha.malengagolf.admin"
                android:layout_marginRight="10dp"
                style="@style/TextStyle"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/AE_androidLayout"
            android:layout_below="@id/AE_appLayout"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/AE_androidVersionLabel"
                android:text="Android Software Version"
                style="@style/TextStyleGrey"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/AE_androidVersion"
                android:text="4.4"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                style="@style/Title3TextStyleGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/AE_stackTrace"
            android:layout_marginTop="10dp"
            android:layout_below="@id/AE_androidLayout"
            android:layout_width="match_parent"
            android:text="stackTrace here ...."
            android:textSize="12sp" android:padding="5dp"
            android:textColor="@color/opaque_red"
            android:background="@color/beige_pale"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/AE_logcat"
            android:text="logcat here ..."
            android:layout_marginTop="10dp"
            android:textSize="12sp" android:padding="5dp"
            style="@style/TextStyle"
            android:layout_below="@id/AE_stackTrace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</RelativeLayout>

