<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/MAIN_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xwhite_rounded_corners" >

        <com.boha.coursemaker.base.BannerGold
            android:id="@+id/MAIN_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/MAIN_topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MAIN_banner"
            android:layout_marginTop="15dp"
            android:background="@drawable/xgrey_white_gradient"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/MAIN_traineeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/trainee"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MAIN_trainee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Trainee Name"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MAIN_classLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MAIN_topLayout"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/MAIN_classLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/training_class"
                android:textColor="@color/grey"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MAIN_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="TrainingClass Name"
                android:textSize="20sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MAIN_courseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MAIN_classLayout"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/MAIN_crsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:padding="5dp"
                android:text="@string/number_courses"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MAIN_courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/absa_red"
                android:textSize="44sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MAIN_activLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MAIN_courseLayout"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/MAIN_actLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:padding="5dp"
                android:text="@string/number_activities"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MAIN_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/navy_blue"
                android:textSize="44sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MAIN_percLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MAIN_activLayout"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/MAIN_percLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:padding="5dp"
                android:text="@string/percent_complete"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MAIN_percComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="0%"
                android:textColor="@color/green"
                android:textSize="72sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MAIN_completeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MAIN_percLayout"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/MAIN_compLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:padding="5dp"
                android:text="@string/number_complete"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MAIN_numberComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="44sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/MAIN_dateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MAIN_completeLayout"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/MAIN_lastDateLabel"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_rating_date"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/MAIN_lastDate"
                style="@style/TextStyleBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/MAIN_lastDateLabel"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/MAIN_lastDateLabel"
                android:padding="5dp"
                android:text="Wednesday, 30 December 2014"
                android:textSize="18sp" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/MAIN_percProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MAIN_dateLayout"
            android:layout_marginTop="20dp"
            android:background="@drawable/xgrey_white_rounded_corners"
            android:max="100"
            android:minWidth="60dp"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MAIN_percProgress"
            android:layout_marginTop="100dp" />
    </RelativeLayout>

</ScrollView>